{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "target": "ES2021",
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "outDir": "dist",
    "useUnknownInCatchVariables": false,
    "types": [
      "node"
    ]
  },
  "include": [
    "lib"
  ],
  "exclude": [
    "**/*.spec.test",
    "**/*.test.ts",
    "node_modules",
    "dist"
  ]
}
