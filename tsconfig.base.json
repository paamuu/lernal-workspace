{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "target": "ES2021",
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "types": [
      "node",
      "jest"
    ],
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "packages/*/node_modules/*"
      ]
    }
  },
  "exclude": [
    "**/*.spec.test",
    "**/*.test.ts",
    "node_modules",
    "dist"
  ]
}
